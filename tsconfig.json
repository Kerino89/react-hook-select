{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "newLine": "lf",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "exclude": ["node_module/**/*", "example/**/*", "dist/**/*"]
}
